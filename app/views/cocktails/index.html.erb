<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://image.freepik.com/free-photo/slices-fresh-citrus-fruits-pink-background_23-2147879644.jpg);">
  <div class="container">
    <div class="banner-text">
      <div>
        <h2>Alcoholic Experiments<h2>
        <p>Cooking up explosions of flavours to help you forget...</p>
      </div>

    </div>

  </div>
</div>
<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>

      <%= link_to cocktail_path(cocktail), id: "card-text" do %>
        <div class="new-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.url %>)">
        <p><%= cocktail.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <%#= link_to 'Add Cocktail', new_cocktail_path %>
</div>



